<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="523.0" prefWidth="761.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kartojimas.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ListView fx:id="magicalList" prefHeight="200.0" prefWidth="200.0" />
      <TextField fx:id="wizardDataField" promptText="Wizard:" />
      <TextField fx:id="titleDataField" promptText="Title:" />
      <DatePicker fx:id="dateField" />
      <ComboBox fx:id="creatureTypeField" prefWidth="150.0" />
      <Button mnemonicParsing="false" onAction="#filterData" text="Filter" />
      <Button mnemonicParsing="false" onAction="#createNew" text="Create new" />
   </children>
</VBox>
